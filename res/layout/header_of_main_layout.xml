<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_margin_size">
    <Button android:id="@+id/header_btChangeQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity"
            android:textSize="@dimen/text_default"
            android:background="@drawable/bt_quantity_bg"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/total_price"
              android:textColor="@color/Orange"
              android:textSize="@dimen/text_default"
              android:layout_below="@id/header_btChangeQuantity"
              android:layout_alignRight="@id/header_btChangeQuantity"/>
    <Button android:id="@+id/header_btCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/header_btChangeQuantity"
            android:layout_marginLeft="@dimen/large_margin_size"
            android:background="@drawable/button_checkout_disabled"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/message_without_price"
              android:textColor="@color/DarkGray"
              android:textSize="@dimen/text_default"
              android:layout_below="@id/header_btCheckout"
              android:layout_alignLeft="@id/header_btCheckout"/>
</RelativeLayout>